<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_15sdp"
    android:background="@color/color_dark_blue"
    tools:context=".UI.AboutBookFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/book_image"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/_10sdp"
                    >

                    <TextView
                        android:id="@+id/book_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:text="QO'RQMA"
                        android:fontFamily="@font/drummon"
                        android:textSize="@dimen/_25ssp"
                        />

                    <TextView
                        android:id="@+id/book_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Javlon Joliyev"
                        android:textColor="@color/text"
                        android:fontFamily="@font/dokchamp"
                        android:textSize="@dimen/_10ssp"
                        />

                    <TextView
                        android:id="@+id/book_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chop etilgan: 2021"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_10sdp"
                        />

                    <TextView
                        android:id="@+id/book_janr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Janri: Tarixiy"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />

                    <TextView
                        android:id="@+id/book_nashriyot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nashriyot: Nihol nashir"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_5ssp"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_10sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To'liq ma'lumot    "
                    android:fontFamily="@font/dokchamp"
                    android:textColor="@color/text"
                    />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerColor="@color/text"
                    app:dividerThickness="2px"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/book_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Роман ўтган асрнинг йигирманчи йилларида Германияда таҳсил олган ва собиқ Совет Иттифоқи томонидан шафқатсизларча қатл этилган миллат йигит-қизларининг  хотирасига бағишланади.
                Роман воқеаларини қисқача сўзлар билан ифода этиб бўлмайди. Барчаси шу қадар  тиғизки, шошириб қўяди. Мажоз, образ, ифода, ўт, ҳеч кимникига ўхшамаган лиризмни ҳис қиласиз. Миллият, соф муҳаббат,  кўринмас ва ошкор фожиалар, тарих, бугун ва эртанинг бир-бирига кавшарланган ҳалқаси, ростлик даъвосидаги ёлғонлар, руҳ ва қондаги парадокслар сизни ўтмиш ва келажак куйига асир қилади, ўйлатади, йиғлатади ва аччиқ-аччиқ кулдиради.  Ўтган аср бошида Германияда ўқиган талабалар, улар маслаги ва фожиали қисмати бугунги ёшлар мақсади билан бир тарозига тортилади."
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yuklab olish formatlari"
                android:fontFamily="@font/dokchamp"
                android:textColor="@color/text"
                android:layout_marginVertical="@dimen/_10sdp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_10sdp"
                >

                <ImageView
                    android:id="@+id/audio_download"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:padding="20dp"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/baseline_headphones_24"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bac_img"
                    />

                <ImageView
                    android:id="@+id/book_download"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:padding="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/baseline_collections_bookmark_24"
                    android:layout_weight="1"
                    android:background="@drawable/bac_img"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio format"
                    android:paddingRight="@dimen/_12sdp"
                    android:textAlignment="center"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PDF format"
                    android:textAlignment="center"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>